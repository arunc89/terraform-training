pipeline{
    agent any
    tools {
     terraform 'Terraform'
    }
}

checkout([$class: 'GitSCM', branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/NishantGupta99/terraform-ec2-demo.git']]])
pipeline{
    agent any
    tools {
     terraform 'Terraform'
    }
    
    stages {
        stage('checkout') {
            steps {
                checkout([$class: 'GitSCM', branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/NishantGupta99/terraform-ec2-demo.git']]])
                
            }
        }
    }
}

stage("terraform init") {
            steps {
                 echo "..................Terraform init.................."
               powershell 'terraform init'
            }
